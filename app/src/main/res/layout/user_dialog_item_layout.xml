<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llUserDialogItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUserDialogItem_Id"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@color/colorOrange"
            android:fontFamily="@font/sofiapro_bold"
            android:gravity="center_vertical|center_horizontal"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUserDialogItem_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/sofiapro_light"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/tvUserDialogItem_Mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:fontFamily="@font/sofiapro_light"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorText" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>