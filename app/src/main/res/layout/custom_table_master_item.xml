<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/table_border"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llCustomTableMasterItem_back"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@mipmap/ic_beer_black"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCustomTableMasterItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/sofiapro_bold"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCustomTableMasterItem_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/sofiapro_light"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />


</LinearLayout>