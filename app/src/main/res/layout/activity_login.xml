<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context="com.ats.barstockexchange.activity.LoginActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:clipToPadding="false"
        android:gravity="bottom"
        android:textColorHint="@color/colorText">

        <EditText
            android:id="@+id/edUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edittext_border_layout"
            android:fontFamily="@font/sofiapro_light"
            android:hint="Username"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="15dp"
        android:clipToPadding="false"
        android:gravity="bottom"
        android:textColorHint="@color/colorText"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorOrange">

        <EditText
            android:inputType="textPassword"
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edittext_border_layout"
            android:fontFamily="@font/sofiapro_light"
            android:hint="Password"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/tvLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/colorOrange"
        android:fontFamily="@font/sofiapro_light"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="Login"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

</LinearLayout>
