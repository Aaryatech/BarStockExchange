<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/colorBlack"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvBillDisplay_BillId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sofiapro_bold" />

                <TextView
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvBillDisplay_UserId"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sofiapro_bold" />

                <ImageView
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/ic_print"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivBillDisplay_Print"/>


            </LinearLayout>


            <TextView
                android:id="@+id/tvBillDisplay_BillDate"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="5dp"
                android:fontFamily="@font/sofiapro_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBillDisplay_Discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sofiapro_bold"/>

                <TextView
                    android:textColor="@color/colorOrange"
                    android:id="@+id/tvBillDisplay_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sofiapro_bold"
                    android:textSize="18sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tvCustomViewOrderItem_Item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sofiapro_light"
                    android:text="Item" />

                <TextView
                    android:id="@+id/tvCustomViewOrderItem_Qty"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sofiapro_light"
                    android:text="Quantity" />

                <TextView
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tvCustomViewOrderItem_Rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sofiapro_light"
                    android:text="Rate" />

            </LinearLayout>

            <ListView
                android:divider="@color/colorText"
                android:id="@+id/lvBillDisplay_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="2dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>